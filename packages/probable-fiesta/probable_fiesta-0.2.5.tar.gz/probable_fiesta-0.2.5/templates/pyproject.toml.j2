[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[project]
name = "{{ project_name }}"
authors = [{ name = "{{ package_author }}", email = "{{ package_email }}" }]
description = "{{ package_description }}"
readme = "README.md"
license = { file = "LICENSE" }
requires-python = ">=3.7"
classifiers = [
  "License :: OSI Approved :: MIT License",
  "Operating System :: OS Independent",
  "Programming Language :: Python",
  "Programming Language :: Python :: 3.7",
  "Programming Language :: Python :: 3.8",
  "Programming Language :: Python :: 3.9",
  "Programming Language :: Python :: 3.10",
  "Programming Language :: Python :: 3.11",
  "Programming Language :: Python :: Implementation :: CPython",
]


dependencies = [
  "python-dotenv",
  "click>=8.0.3",
]
dynamic = ["version"]

[project.urls]
"Homepage" = "https://github.com/sergio-munoz/{{ project_name }}/"
"Bug Tracker" = "https://github.com/sergio-munoz/{{ project_name }}/issues"
Documentation = "https://github.com/sergio-munoz/{{ project_name }}#readme"
Issues = "https://github.com/sergio-munoz/{{ project_name }}/issues"
Source = "https://github.com/sergio-munoz/{{ project_name }}"

[project.scripts]
{{ package_name }} = "{{ project_name }}.run:main"

[tool.hatch.version]
path = "{{ project_version_path }}"


[tool.hatch.envs.default]
dependencies = [
  "coverage[toml]",
  #"pytest",
  #"pytest-cov",
]

#[tool.hatch.build]
#include = [
    #"probable_fiesta/*.py",
    #"tests/",
#]
#[tool.hatch.build.targets.wheel.hooks.mypyc]
#dependencies = ["hatch-mypyc"]

#[build.targets.wheel.hooks.mypyc]
#include = ["/src/probable_fiesta"]
#exclude = ["__main__.py"]

[tool.hatch.envs.default.scripts]
#cov = "pytest --cov-report=term-missing --cov-config=pyproject.toml --cov=pubnub_pytools --cov=tests"
#no-cov = "cov --no-cov"
cov = "coverage run --omit tests/*,scripts/*  -m unittest"
report = "coverage report"
{{ package_name }} = "{{ project_name }}.run:main"

[[tool.hatch.envs.test.matrix]]
python = ["37", "38", "39", "310", "311"]

[tool.coverage.run]
branch = true
parallel = true
omit = [
  "src/probable_fiesta/__about__.py",
]

[tool.coverage.report]
exclude_lines = [
  "no cov",
  "if __name__ == .__main__.:",
  "if TYPE_CHECKING:",
]
