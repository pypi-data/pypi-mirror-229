<odoo>


<record id="view_account_config_settings" model="ir.ui.view">
    <field name="name">overdue.reminder.res.config.settings.form</field>
    <field name="model">account.config.settings</field>
    <field name="inherit_id" ref="account.view_account_config_settings"/>
    <field name="arch" type="xml">
        <group name="followup" position="before">
            <group name="overdue_reminder" string="Overdue Invoice Reminder">
                <field name="overdue_reminder_attach_invoice"/>
                <field name="overdue_reminder_partner_policy" widget="radio"/>
                <field name="overdue_reminder_interface" widget="radio"/>
                <label for="overdue_reminder_start_days" string="Default Reminder Trigger Delay"/>
                <div name="overdue_reminder_start_days">
                    <field name="overdue_reminder_start_days" class="oe_inline"/> days
                </div>
                <label for="overdue_reminder_min_interval_days" string="Default Reminder Minimum Interval"/>
                <div name="overdue_reminder_min_interval_days">
                    <field name="overdue_reminder_min_interval_days" class="oe_inline"/> days
                </div>
            </group>
        </group>
    </field>
</record>


</odoo>
